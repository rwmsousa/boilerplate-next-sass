{
    "extends": ["@commitlint/config-conventional"],
    "rules": {
        "header-max-length": [2, "always", 100],
        "type-enum": [
            2,
            "always",
            [
                "feat",
                "fix",
                "docs",
                "chore",
                "style",
                "refactor",
                "ci",
                "test",
                "revert",
                "perf",
                "vercel"
            ]
        ]
    }
}
